<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AIREAL"
        tools:targetApi="31">
        <activity
            android:name=".detailproduct.DetailProductActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shopdisplay.ShopDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".riwayatpesanan.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".editshop.EditShopActivity"
            android:exported="true"
            android:label="@string/edit_shop"
            android:theme="@style/Base.Theme.AIREAL" />
        <activity
            android:name=".detailedit.DetailEditActivity"
            android:exported="false" />
        <activity
            android:name=".editprofile.EditProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/Base.Theme.AIREAL" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>